{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "C/C++: clang++ build and debug FreeCAD",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/bin/FreeCAD",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "lldb",
      "preLaunchTask": "CMake: build"
    },
    {
      "name": "Python: Remote Attach",
      "type": "python",
      "request": "attach",
      "preLaunchTask": "conda: activate environment",
      "redirectOutput": true,
      "connect": {
        "host": "localhost",
        "port": 5678
      },
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}",
          "remoteRoot": "${workspaceFolder}"
        }
      ],
      "justMyCode": false
    }
  ]
}
